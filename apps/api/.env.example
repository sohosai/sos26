# CORS 設定（本番では適切なドメインを設定してください）
CORS_ORIGIN=http://localhost:5173
PORT=3000

# SendGrid（メール送信）
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=you@example.com
EMAIL_SANDBOX=false

# Firebase Admin
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
# 改行は \n で記述（コード側で実改行に変換されます）
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# 認証リンク用（メール内URL生成）
APP_URL=http://localhost:5173

# Database
DATABASE_URL="postgresql://USER:PASSWORD@IP:5432/DB_NAME?schema=public"

# Push通知用
# Push Service が問題発生時に連絡するための連絡先
ADMIN_MAIL="admin@example.com"
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
PUSH_SEND_BATCH_SIZE=50

# S3互換オブジェクトストレージ（さくらのオブジェクトストレージ）
S3_ENDPOINT=https://s3.isk01.sakurastorage.jp
S3_REGION=jp-north-1
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_PRESIGNED_URL_EXPIRES=3600
S3_MAX_FILE_SIZE=10485760

# ファイルトークン署名用秘密鍵（32文字以上）
FILE_TOKEN_SECRET=your-file-token-secret-at-least-32-chars
