{
  "name": "sos26",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.2.10",
  "engines": {
    "bun": ">=1.2.10"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "preview": "turbo preview",
    "test:run": "bun --filter './apps/*' --filter './packages/*' test:run",
    "test:watch": "bun --filter './apps/*' --filter './packages/*' test:watch",
    "typecheck": "tsc -b",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "ci": "biome ci .",
    "clean": "turbo clean",
    "clean:all": "bun run clean && rm -rf node_modules apps/*/node_modules packages/*/node_modules .turbo",
    "db:generate": "bun run --cwd apps/api db:generate",
    "db:migrate:dev": "bun run --cwd apps/api db:migrate:dev",
    "db:migrate:deploy": "bun run --cwd apps/api db:migrate:deploy",
    "db:migrate:reset": "bun run --cwd apps/api db:migrate:reset",
    "db:push": "bun run --cwd apps/api db:push",
    "db:pull": "bun run --cwd apps/api db:pull",
    "db:studio": "bun run --cwd apps/api db:studio",
    "db:format": "bun run --cwd apps/api db:format"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@vitest/coverage-v8": "^4.0.16",
    "lefthook": "^2.0.13",
    "sass-embedded": "^1.97.2",
    "turbo": "^2.8.9",
    "typescript": "~5.9.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "zod": "^4.3.5"
  }
}
